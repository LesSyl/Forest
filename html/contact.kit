<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1">
    <title>Forest</title>
    <!--  @include 'styles.kit' -->
</head>

<body>
    <header class="header">
        <button class="burger-btn">
            <div class="burger-btn__box ">
                <div class="burger-btn__bars"></div>
            </div>
        </button>
        <div class="header__company">
            <a href="index.html#" class="header__company-logo"><img src="src/icons/tree.svg"
                    alt="czarne drzewo, logo firmy">
                <p class="header__company-logo-title">Forest</p>
            </a>
        </div>
        <nav class="nav nav-mobile">
            <a href="index.html#home" class="nav__item">Home</a>
            <a href="index.html#aboutus" class="nav__item">O nas</a>
            <a href="index.html#offers" class="nav__item">Oferta</a>
            <a href="contact.html" class="nav__item">Kontakt</a>
        </nav>

        <nav class="nav nav-desktop">
            <a href="index.html#home" class="nav-desktop__item">Home</a>
            <a href="index.html#aboutus" class="nav-desktop__item">O nas</a>
            <a href="index.html#offers" class="nav-desktop__item">Oferta</a>
            <a href="contact.html" class="nav-desktop__item active">Kontakt</a>
        </nav>


    </header>

    <section class="section__contact">
        <div class="wrapper">
            <div class="main-title">
                <p>Kontakt</p>
            </div>
            <div class="contact">
                <div class="contact__box">
                    <div class="contact__title">
                        <p>Napisz do nas:</p>
                    </div>
                    <form class="contact__form">
                        <div class="contact__form-box">
                            <label for="username" class="contact__form-box-label">Imię i nazwisko:</label>
                            <input type="text" class="contact__form contact__form-input" id="username">
                            <p class="error">error</p>
                        </div>
                        <div class="contact__form-box">
                            <label for="email" class="contact__form-box-label">Adres e-mail:</label>
                            <input type="email" class="contact__form contact__form-input" id="email">
                            <p class="error">error</p>
                        </div>
                        <div class="contact__form-box">
                            <label for="msg" class="contact__form-box-label">Wiadomość:</label>
                            <textarea id="msg" class="contact__form contact__form-textarea"></textarea>
                            <p class="error">error</p>
                        </div>


                        <div class="popup">
                            <p>Formularz został poprawnie wysłany!</p>
                            <button class="popup__btn btn-special-animation">Zamknij</button>

                        </div>
                    </form>


                    <div class="section button">
                        <button type="submit" class="btn btn-special-animation send-btn">Wyślij</button>
                    </div>
                </div>
                <div class="contact__details">
                    <h2 class="contact__details-address">Adres</h2>
                    <p class="contact__details-text">ul.Jasnogórska 1</p>
                    <p class="contact__details-text">00-000 Kraków</p>
                    <p class="contact__details-text"><img src="src/icons/telephone.svg" alt="ikona słuchawki telefonu"
                            class="contact__details-icon"> +48 000 000 000</p>
                    <p class="contact__details-text"><img src="src/icons/mail.svg" alt="ikona koperty"
                            class="contact__details-icon"> mail@mail.pl</p>
                </div>
            </div>

            <div class="google">
                <iframe class="google-map"
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2559.8982339277313!2d19.890269276283522!3d50.08819217152535!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47165a326d015c3b%3A0x47a12cd367a1f34e!2sRestauracja%20McDonald&#39;s!5e0!3m2!1spl!2spl!4v1718705397190!5m2!1spl!2spl"
                    width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
        <div class="social">
            <a href="index.html" target="_blank">
                <img src="src/icons/facebook.svg" alt="ikona facebooku" class="social__facebook"></a>
            <a href="index.html" target="_blank">
                <img src="src/icons/instagram.svg" alt="ikona instagrama" class="social__instagram"></a>
            <a href="index.html" target="_blank">
                <img src="src/icons/twitter.svg" alt="ikona twittera" class="social__twitter"></a>
            <a href="index.html" target="_blank">
                <img src="src/icons/youtube.svg" alt="ikona youtuba" class="social__youtube"></a>
        </div>
    </section>

    <!-- @include 'footer.kit' -->
     <script src="dist/js/form.min.js"></script>
    
    <!-- @include 'scripts.kit' -->
</body>

</html>